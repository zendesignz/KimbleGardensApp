---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Dashboard | Kimble Gardens">
  <section class="grid">
    <article class="card">
      <h2>Today at a Glance</h2>
      <ul class="clean">
        <li>Check watering statuses for active batches.</li>
        <li>Review upcoming client deliveries.</li>
        <li>Upload media updates for clients.</li>
      </ul>
    </article>
    <article class="card">
      <h2>Quick Actions</h2>
      <div class="actions">
        <a class="kg-button" href="/plant-records">Open Plant Records</a>
        <a class="kg-button secondary" href="/clients">Open Clients</a>
      </div>
      <p class="small">Tip: Add your real logo file as <code>public/logo.png</code>.</p>
    </article>
  </section>
</BaseLayout>
